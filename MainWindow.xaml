        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DentalSoft"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="350" Width="525">

    <Grid Initialized="Grid_Initialized">
        <Image x:Name="canvasImg" HorizontalAlignment="Left" Height="168" Margin="127,81,0,0" VerticalAlignment="Top" Width="46" ClipToBounds="True"/>
